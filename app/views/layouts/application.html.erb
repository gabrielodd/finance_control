      <a class="navbar-brand text-white" href="#"><i class="fa fa-graduation-cap fa-lg mr-2"></i>FINANCE CONTROL</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nvbCollapse" aria-controls="nvbCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nvbCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item pl-1">
            <%= link_to despesas_path, class: "nav-link" do %>
              <i class="fa fa-th-list fa-fw mr-1"></i><%= t('menu.spendings') %>
            <% end %>
          </li>
          <% if user_signed_in? %>
          
            <li class="nav-item pl-1">
              <%= link_to relatorio_path, class: "nav-link" do %>
                <i class="fa fa-info-circle fa-fw mr-1"></i><%= t('menu.reports') %>
              <% end %>
            </li>
          
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user fa-fw mr-1"></i><%= current_user.email %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <%= link_to t('menu.edit_profile'), edit_user_registration_path, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to t('menu.settings'), settings_path, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to t('menu.logout'), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>

          <% else %>

            <li class="nav-item pl-1">
              <%= link_to t('menu.signup'), new_user_registration_path, class: "nav-link" %> 
            </li>
            <li class="nav-item pl-1">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <!--# Navbar #-->
</header>

<div class="container">
