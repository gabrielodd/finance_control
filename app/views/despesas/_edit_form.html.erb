<%= form_with(model: despesa, id: "edit-form", local: true) do |form| %>
  <td><%= form.collection_select :categoria_id, Categoria.all, :id, :name %></td>
  <td><%= form.text_field :descricao %></td>
  <td><%= form.text_field :valor %></td>
  <td><%= form.text_field :mes %></td>
  <td colspan="4"><%= form.submit 'Update', class: 'btn btn-sm btn-primary mr-1' %></td>
<% end %>