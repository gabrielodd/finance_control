<div class="container">
  <h3 class="text-center"><%=t('menu.new_despesa')%></h1>
  <div class="border p-4">
    <%= form_with(model: despesa, local: true, class: 'needs-validation') do |form| %>
      <% if despesa.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(despesa.errors.count, "error") %> prohibited this despesa from being saved:</h2>

          <ul>
            <% despesa.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="panel panel-primary">
      <div class="panel-body">
        <div class="form-group">
          <%= form.label :descricao %>
          <%= form.text_field :descricao, name: "despesa[descricao][]", class: 'form-control', required: true %>

          <%= form.label :valor %>
          <%= form.text_field :valor, name: "despesa[valor][]", class: 'form-control', required: true %>

          <%= form.label :date %>
          <%= form.date_field :date, name: "despesa[date][]", class: 'form-control', required: false %>
          <hr>
          <button type="button" id="add-descricao" class="btn btn-secondary mt-2">Add Spending</button>
        </div>
      </div>
    </div>

      <div class="form-group">
        <%= form.label :categoria %>
        <%= form.select(:categoria_id, Categoria.all.map { |c| [c.name, c.id] }, {}, class: 'form-control', required: true) %>
      </div>

      <div class="form-check">
        <%= form.check_box :repeating, class: 'form-check-input' %>
        <%= form.label :repetir, class: 'form-check-label' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>

      <%= link_to 'Back', despesas_path, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
