<div class="devise-form-wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'devise-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <h3 class="devise-header">Sign up</h3>

    <div class="field">
      <%= f.label :email, class:'devise-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'devise-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class:'devise-label' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'devise-input', 
                            placeholder: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : '' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:'devise-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'devise-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'devise-update-button' %>
    </div>

    <div class="text-center mt-5">
      <span>Already have an account?</span> <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
