<div class="devise-form-wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <h3 class="devise-header">Log in</h3>

    <div class="field">
      <%= f.label :email, class:'devise-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'devise-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class:'devise-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'devise-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class:'form-check-label devise-label' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'devise-update-button' %>
    </div>

    <div class="text-center mt-5">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
